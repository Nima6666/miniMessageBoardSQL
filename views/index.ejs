<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="messages">
      <% messages.forEach((mes) => { %>
      <div class="message">
        <div class="name"><%= mes.name %></div>
        <div class="userMessage"><%= mes.message %></div>
      </div>
      <% }); %>
      <a href="/addMessage">Add a new Message</a>
    </div>
  </body>
</html>
